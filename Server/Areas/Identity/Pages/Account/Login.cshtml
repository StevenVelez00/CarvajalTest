@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- BEGIN #app -->
<div id="app" class="app">
    <!-- BEGIN login -->
    <div class="login login-with-news-feed">
        <!-- BEGIN news-feed -->
        <div class="news-feed">
            <div class="news-image" style="background-image: url(../../Intranet/img/carvajal/fondo2.png)"></div>
            @*<div class="news-image" style="background-image: url(../../Intranet/img/login-bg/login-bg-11.jpg)"></div>*@
        </div>
        <!-- END news-feed -->
        <!-- BEGIN login-container -->
        <div class="login-container">
            <!-- BEGIN login-header -->
            <div class="login-header mb-30px">
                <div class="brand">
                    <div class="d-flex align-items-center">
                        <span class="logo"></span>
                        <b>Carvajal</b> SA
                    </div>
                    <small>Impulsamos el desarrollo económico y social haciendo las cosas bien.</small>
                </div>
                <div class="icon">
                    <i class="fa fa-sign-in-alt"></i>
                </div>
            </div>
            <!-- END login-header -->
            <!-- BEGIN login-content -->
            <div class="login-content">
                <div class="row">
                    <div class="col-md-12">
                        <section>
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating mb-15px">
                                    <input asp-for="Input.Email" id="emailAddress" class="form-control h-45px fs-13px" placeholder="Email Address" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="d-flex align-items-center fs-13px text-gray-600"></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-15px">
                                    <input asp-for="Input.Password" id="password" placeholder="Password" class="form-control  h-45px fs-13px" autocomplete="current-password" aria-required="true" />
                                    <label asp-for="Input.Password" class="d-flex align-items-center fs-13px text-gray-600"></label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-check mb-30px">
                                    <div class="form-check mb-30px">
                                        <label asp-for="Input.RememberMe" class="form-check-label">
                                            <input class="form-check-input" id="rememberMe" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="mb-15px">
                                    <button id="login-submit" type="submit" class="btn btn-success d-block h-45px w-100 btn-lg fs-14px">Ingresar</button>
                                </div>
                                <div>
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Olvido su contraseña?</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar un nuevo usuario</a>
                                    </p>
                                    <p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar la confirmacion de la contraseña</a>
                                    </p>
                                </div>
                                <hr class="bg-gray-600 opacity-2" />
                                <div class="text-gray-600 text-center mb-0">
                                    &copy; Carvajal All Right Reserved 2022
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
            <!-- END login-content -->
        </div>
        <!-- END login-container -->
    </div>
    <!-- END login -->
    <!-- BEGIN scroll-top-btn -->
    <a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top" data-toggle="scroll-to-top"><i class="fa fa-angle-up"></i></a>
    <!-- END scroll-top-btn -->
</div>
<!-- END #app -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
